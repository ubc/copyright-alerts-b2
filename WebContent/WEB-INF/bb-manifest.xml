<?xml version="1.0" encoding="ISO-8859-1"?>
<manifest>
  <!-- core extension information -->
    <plugin>
        <name value="Copyright Alerts"/>
        <handle value="copyright-alerts"/>
        <description value= ""/>
        <version value= "1.0.0"/>
        <requires>
            <bbversion value="9.1"/>
        </requires>
        <vendor>
            <id value="ubc"/>
            <name value="University of British Columbia"/>
            <url value="http://www.ubc.ca/" />
            <description value="" />
        </vendor>
		<http-actions>
			<config value="settings" />
		</http-actions>
<!--    These two JSPs are displayed when the "remove" and "properties" buttons -->
<!--	are pressed on the Building Blocks administration page. 				-->
<!--    <http-actions>
            <config value="admin/configure.jsp"/>
            <remove value="admin/remove.jsp"/>
        </http-actions>
 -->    
        <application-defs>
            <application handle="copyright-alerts" type="shared" use-ssl="false" 
            	name="Copyright Alerts" can-allow-guest="false">
                <description lang="en_US">Generate copyright status alerts on files in Content Collections.</description>
                <links>
                    <link>
                        <type value="system_tool"/>
                        <name value="Copyright Alerts"/>
                        <url value="/settings" />
                        <description value="Copyright Alerts" />
                    </link>
                </links>
            </application>
        </application-defs>

<!-- Portal Module Definitions -->
        <module-defs>
        </module-defs>
<!--  Custom Content Types -->
        <content-handlers>
        </content-handlers>

<!-- /WebContent/schema/<schema-dir> is where bbl looks for the database schema configuration -->
		<schema-dirs>
			<schema-dir dir-name="alertsdb" />
        </schema-dirs>

<!-- code permissions required for proper operation -->
        <permissions>
            <!-- Spring need this to work -->
            <permission type="java.lang.reflect.ReflectPermission" name="suppressAccessChecks" />
			<permission type="attribute" name="user.authinfo" actions="get,set" /> 
            <permission type="attribute" name="user.personalinfo" actions="get,set"/>
            <permission type="java.io.FilePermission" name="&amp;lt;&amp;lt;ALL FILES&amp;gt;&amp;gt;" actions="read,write,execute,delete"/>
            <permission type="java.util.PropertyPermission" name="*" actions="read,write" />
            <permission type="java.lang.RuntimePermission" name="setContextClassLoader" />
            <permission type="java.lang.RuntimePermission" name="db.connection.*" />
			<permission type="persist" name="user" actions="create,modify,delete" />
			<permission type="persist" name="userrole" actions="create,modify,delete" />
			<permission type="persist" name="course" actions="create,modify,delete" />
<!--
            <permission type="persist" name="Group" actions="persist"/>
            <permission type="persist" name="GroupMembership " actions="persist"/>
-->
        </permissions>

    </plugin>

</manifest>
